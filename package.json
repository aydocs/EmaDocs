{
  "name": "emadocs-framework",
  "version": "1.0.0",
  "description": "The world's most advanced UI framework and programming language",
  "main": "core/emadocs-framework.js",
  "bin": {
    "emadocs": "./emadocs-cli.js"
  },
  "scripts": {
    "dev": "node emadocs-cli.js dev",
    "build": "node emadocs-cli.js build",
    "serve": "node emadocs-cli.js serve",
    "init": "node emadocs-cli.js init",
    "create": "node emadocs-cli.js create",
    "generate": "node emadocs-cli.js generate",
    "test": "node emadocs-cli.js test",
    "lint": "node emadocs-cli.js lint",
    "format": "node emadocs-cli.js format",
    "start": "npm run dev",
    "preview": "npm run serve"
  },
  "keywords": [
    "framework",
    "ui",
    "components",
    "javascript",
    "typescript",
    "react",
    "vue",
    "svelte",
    "nextjs",
    "web",
    "frontend",
    "development",
    "programming-language",
    "compiler",
    "virtual-dom",
    "state-management",
    "routing",
    "animations",
    "3d",
    "pwa",
    "accessibility",
    "responsive",
    "modern",
    "fast",
    "lightweight",
    "scalable"
  ],
  "author": "Emadocs Framework Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/emadocs/framework.git"
  },
  "bugs": {
    "url": "https://github.com/emadocs/framework/issues"
  },
  "homepage": "https://emadocs.dev",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "open": "^8.4.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "files": [
    "core/",
    "components/",
    "css/",
    "js/",
    "docs/",
    "examples/",
    "emadocs-cli.js",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/emadocs"
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/emadocs"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,less}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-console": "warn",
      "no-debugger": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.(js|jsx|ts|tsx)",
      "**/*.(test|spec).(js|jsx|ts|tsx)"
    ],
    "collectCoverageFrom": [
      "core/**/*.{js,ts}",
      "components/**/*.{js,ts}",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
